<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragments.PowersFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/top_bar_level">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:elevation="10dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:padding="0dp"
                android:src="@drawable/ic_lv"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="0"
                android:background="@drawable/button_style_inverted"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22dp" />

        </LinearLayout>



    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:src="@drawable/logo_banner_powerups"
        android:background="@drawable/banner_powerup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/secondaryColor"
        android:elevation="20dp"
        android:layout_marginBottom="8dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/kakera_point_card_bg"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:src="@drawable/ic_arrows_up"
            app:tint="@color/white" />

        <TextView
            style="@style/myButtonPowerUp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/backgroundDefault"
            android:textSize="24dp"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="@drawable/kakera_point_card_bg"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="18dp"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_dice"
                    app:tint="@color/white" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginVertical="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantidade de Rolls por ciclo (2 horas)"
                    android:layout_weight="5"
                    android:layout_marginHorizontal="8dp"/>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/kakera_point_card_bg"
                    android:gravity="center">
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginHorizontal="6dp"
                        android:text="8"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:gravity="center"
                        android:padding="0dp"
                        android:textSize="22dp"
                        style="@style/myButtonPowerUp" />
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:background="@drawable/kakera_point_card_bg"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="18dp"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_heart_plus"
                    app:tint="@color/white" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginVertical="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aumentar tamanho da Lista de Desejos"
                    android:layout_weight="5"
                    android:layout_marginHorizontal="8dp"/>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/kakera_point_card_bg"
                    android:gravity="center">
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="6dp"
                        android:text="5"
                        android:textAlignment="center"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:gravity="center"
                        android:padding="0dp"
                        android:textSize="22dp"
                        style="@style/myButtonPowerUp" />
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:background="@drawable/kakera_point_card_bg"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="18dp"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_heart_percent"
                    app:tint="@color/white" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginVertical="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mais chance de dropar cartas da sua Lista de Desejos"
                    android:layout_weight="5"
                    android:layout_marginHorizontal="8dp"/>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/kakera_point_card_bg"
                    android:gravity="center">
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="6dp"
                        android:text="0.5%"
                        android:textAlignment="center"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:gravity="center"
                        android:padding="0dp"
                        android:textSize="22dp"
                        style="@style/myButtonPowerUp" />
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:background="@drawable/kakera_point_card_bg"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="18dp"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_heart_plus1"
                    app:tint="@color/white" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginVertical="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/marryUpText"
                    android:layout_weight="5"
                    android:layout_marginHorizontal="8dp"/>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/kakera_point_card_bg"
                    android:gravity="center">
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="6dp"
                        android:textAlignment="center"
                        android:text="0%"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:gravity="center"
                        android:padding="0dp"
                        android:textSize="22dp"
                        style="@style/myButtonPowerUp" />
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:background="@drawable/kakera_point_card_bg"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="18dp"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_xp_up"
                    app:tint="@color/white" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginVertical="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xpUpText"
                    android:layout_weight="5"
                    android:layout_marginHorizontal="8dp"/>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/kakera_point_card_bg"
                    android:gravity="center">
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="6dp"
                        android:textAlignment="center"
                        android:text="0%"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:gravity="center"
                        android:padding="0dp"
                        android:textSize="22dp"
                        style="@style/myButtonPowerUp" />
                </LinearLayout>




            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>